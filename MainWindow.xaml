<Window
    x:Class="v3.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:v3"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Window.Resources>
        <FontFamily x:Key="FontAwesome">pack://application:,,,/Resources/#FontAwesome</FontFamily>
    </Window.Resources>
    <DockPanel Background="AliceBlue">
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar Band="1" BandIndex="1" Background="Azure">
                <StackPanel Orientation="Horizontal">
                    <Button
                        Name="FirstWord"
                        Click="FirstWord_Click"
                        Content="|&#60;&#60;"
                        ToolTip="First" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button
                        Name="PreviousWord"
                        Click="PreviousWord_Click"
                        Content="&#60;&#60;"
                        ToolTip="Previous" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button
                        Name="NextWord"
                        Click="NextWord_Click"
                        Content="&#62;&#62;"
                        ToolTip="Next" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button
                        Name="lastWord"
                        Click="LastWord_Click"
                        Content="&#62;&#62;|"
                        ToolTip="Last" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button />
                </StackPanel>
            </ToolBar>
        </ToolBarTray>

        <Grid Background="AliceBlue" Margin="0,20,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="400" />
            </Grid.ColumnDefinitions>

            <Label Background="AliceBlue"
                Grid.Row="0"
                Grid.Column="0"
                Content="Pinyin" />
            <Label Background="AliceBlue"
                Grid.Row="1"
                Grid.Column="0"
                Content="English" />
            <Label Background="AliceBlue"
                Grid.Row="2"
                Grid.Column="0"
                Content="Hanzi" />
            <Label Background="AliceBlue"
                Grid.Row="3"
                Grid.Column="0"
                Content="Formality" />
            <Label Background="AliceBlue"
                Grid.Row="4"
                Grid.Column="0"
                Content="Part of speech" />

            <TextBox
                x:Name="Text_Pinyin"
                Grid.Row="0"
                Grid.Column="1" />
            <TextBox
                x:Name="Text_English"
                Grid.Row="1"
                Grid.Column="1" />
            <TextBox
                x:Name="Text_Hanzi"
                Grid.Row="2"
                Grid.Column="1" />
            <TextBox
                x:Name="Text_PartOfSpeech"
                Grid.Row="3"
                Grid.Column="1" />
            <TextBox
                x:Name="Text_Formality"
                Grid.Row="4"
                Grid.Column="1" />
        </Grid>
        <StackPanel Orientation="Vertical" Background="AliceBlue" VerticalAlignment="Top" Width="100" Height="200" Margin="0,20,0,0">
            <CheckBox HorizontalAlignment="Left"
                      Click="Check_Pinyin_Click"
                x:Name="Check_Pinyin"
                Grid.Row="0"
                Grid.Column="2"
                Content="Pinyin" />
            <CheckBox HorizontalAlignment="Left"
                      Click="Check_English_Click"
                x:Name="Check_English"
                Grid.Row="1"
                Grid.Column="2"
                Content="English" />
            <CheckBox HorizontalAlignment="Left"
                      Click="Check_Hanzi_Click"
                x:Name="Check_Hanzi"
                Grid.Row="2"
                Grid.Column="2"
                Content="Hanzi" />
            <CheckBox HorizontalAlignment="Left"
                      Click="Check_PartOfSpeech_Click"
                x:Name="Check_PartOfSpeech"
                Grid.Row="3"
                Grid.Column="2"
                Content="Part of speech" />
            <CheckBox HorizontalAlignment="Left"
                      Click="Check_Formality_Click"
                x:Name="Check_Formality"
                Grid.Row="4"
                Grid.Column="2"
                Content="Formality" />
        </StackPanel>
    </DockPanel>
</Window>